{
  "name": "nextjs-dynamic-route-demo",
  "version": 2,
  "framework": "nextjs",
  
  "cleanUrls": true,
  "trailingSlash": false,
  
  "regions": ["hnd1", "iad1"],
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  
  "github": {
    "enabled": true,
    "autoAlias": true
  }
} 