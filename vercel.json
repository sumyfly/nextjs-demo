{
  "$schema": "https://openapi.vercel.sh/vercel.json",

  "name": "nextjs-dynamic-route-demo",
  "version": 2,
  "builds": [
    {
      "src": "frontend/next.config.js",
      "use": "@vercel/next"
    }
  ],

  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },

  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",

  "framework": "nextjs",

  "routes": [
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/robots.txt",
      "dest": "/api/robots"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/api/sitemap"
    },
    {
      "src": "/(.*)",
      "dest": "app"
    }
  ]
}
